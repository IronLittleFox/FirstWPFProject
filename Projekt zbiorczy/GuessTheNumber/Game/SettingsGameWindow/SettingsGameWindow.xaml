<UserControl x:Class="GuessTheNumber.Game.SettingsGameWindow.SettingsGameWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuessTheNumber.Game.SettingsGameWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Maksymalna liczba:"/>
        <TextBox Text="{Binding MaxRange,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Powrót do strony domowej" Command="{Binding ReturnToHomeWindowCommand}" Margin="10"/>
    </StackPanel>
</UserControl>
